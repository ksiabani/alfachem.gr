    body
        // Fixed navbar
        .navbar.navbar-default.navbar-fixed-top(role='navigation')
            .container
                .navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/")
                        img(src="http://placehold.it/150x50&text=Logo", alt="")
                .navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-right
                        li(class=path=='/'?'active':undefined)
                            a(href='/') #{__('Home')}
                        li(class=path=='/products'?'active':undefined)
                            a(href='/products') #{__('Products')}
                        li(class=path=='/about'?'active':undefined)
                            a(href='/about') #{__('About')}
                        li(class=path=='/contact'?'active':undefined)
                            a(href='/contact') #{__('Contact')}
                        li
                            if locale == 'en'
                                a(href='/setlocale/el') Ελληνικά
                            else
                                a(href='/setlocale/en') English
                // .nav-collapse
        block content
        // Bootstrap core JavaScript
        // ==================================================
        // Placed at the end of the document so the pages load faster
        script(src='/components/jquery/dist/jquery.min.js')
        script(src='/components/bootstrap/dist/js/bootstrap.min.js')
